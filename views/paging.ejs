

<br/>

<div>

    <% if (pageCount > 1) { %>
    <ul class="pagination justify-content-center">
        <%# if (page > 1) { %>
        <li class="page-item"><a class="page-link text-muted" href="?p=1">Previous</a></li>
        <%# } %>
        <% var i = 1;
            if (page > 5) {
                i = +page - 4;
            } %>
        <% if (i !== 1) { %>
        <li class="page-item disabled"><a class="page-link text-muted" href="#">...</a></li>
        <% } %>
        <% for (i; i<=pageCount; i++) { %>
        <% if (page == i) { %>
        <li class="page-item active"><span class="page-link" ><%= i %> <span class="sr-only">(current)</span></span></li>
        <% } else { %>
        <li class="page-item"><a class="page-link text-muted" href="?p=<%= i %>"><%= i %></a></li>
        <% } %>
        <% if (i == (+page + 4)) { %>
        <li class="page-item disabled"><a class="page-link text-muted" href="#">...</a></li>
        <% break; } %>
        <% } %>
        <%# if (page != pageCount) { %>
        <li class="page-item"><a class="page-link text-muted" href="?p=<%= pageCount %>">Next</a></li>
        <%# } %>
    </ul>
    <% } %>

</div>