<%- include('header') %>

<!-- Page Header -->
<header class="masthead" style="background-image: url('img/home-bg2.jpg')">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <div class="site-heading">
                    <h1>Blog Sample</h1>
                    <span class="subheading">The blog sample is built by using Node.js Express.js Bootstrap</span>
                </div>
            </div>
        </div>
    </div>
</header>

<!-- Main Content -->
<div class="container">
    <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto text-truncate">
            <% posts.forEach(function (post) { %>
            <div class="post-preview">
                <a href="post.html">
                    <h2 class="post-title">
                        <a href="/posts/<%= post._id %>"><%= post.title %></a>
                    </h2>

                </a>
                <p class="post-meta">Posted by
                    <a href="#"><%= post.author.name %></a>
                    on <%= post.created_at %></p>
            </div>
            <% }) %>

            <%- include('paging') %>

        </div>
    </div>

</div>


<%- include('footer') %>